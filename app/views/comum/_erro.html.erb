<% if model.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">
        &times;
      </span>
      <span class="sr-only">
        Close
      </span>
    </button>
    <% model.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>
